<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinshijie.gallery.mapper.UserVedioMapper">

    <sql id="selectUserVedio">
        select
                  id,
                url,
                is_vip,
                is_free,
                create_time,
                aid
        from user_video
    </sql>

    <select id="selectListUserVedio" parameterType="com.xinshijie.gallery.dto.UserVideoDto" resultType="com.xinshijie.gallery.vo.UserVideoVo">
        <include refid="selectUserVedio"/>
        <where>
                    <if test="id !=null ">and id= #{id}</if>
                    <if test="url !=null ">and url= #{url}</if>
                    <if test="isVip !=null ">and is_vip= #{isVip}</if>
                    <if test="isFree !=null ">and is_free= #{isFree}</if>
                    <if test="createTime !=null ">and create_time= #{createTime}</if>
                    <if test="aid !=null ">and aid= #{aid}</if>
        </where>
    </select>

    <select id="selectPageUserVedio"  resultType="com.xinshijie.gallery.vo.UserVideoVo">
        <include refid="selectUserVedio"/>
        <where>
                    <if test="dto.id !=null ">and id= #{dto.id}</if>
                    <if test="dto.url !=null ">and url= #{dto.url}</if>
                    <if test="dto.isVip !=null ">and is_vip= #{dto.isVip}</if>
                    <if test="dto.isFree !=null ">and is_free= #{dto.isFree}</if>
                    <if test="dto.createTime !=null ">and create_time= #{dto.createTime}</if>
                    <if test="dto.aid !=null ">and aid= #{dto.aid}</if>
        </where>
    </select>

    <select id="getPageUserVedio"  resultType="com.xinshijie.gallery.vo.UserVideoVo">
        <include refid="selectUserVedio"/> ${ew.customSqlSegment}
    </select>


    <delete id="delById"  >
        delete FROM  user_video where  id = #{id}
    </delete>

    <select id="getInfo"  resultType="com.xinshijie.gallery.vo.UserVideoVo">
        <include refid="selectUserVedio"/> where  id = #{id}
    </select>

</mapper>
