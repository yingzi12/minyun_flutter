<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinshijie.gallery.mapper.UserBuyVipMapper">

    <sql id="selectUserBuyVip">
        select
                  id,
                user_id,
                user_name,
                create_time,
                vid,
                update_time,
                price,
                buy_time,
                status,
                title
        from user_buy_vip
    </sql>

    <select id="selectListUserBuyVip" parameterType="com.xinshijie.gallery.dto.UserBuyVipDto" resultType="com.xinshijie.gallery.vo.UserBuyVipVo">
        <include refid="selectUserBuyVip"/>
        <where>
                    <if test="id !=null ">and id= #{id}</if>
                    <if test="userId !=null ">and user_id= #{userId}</if>
                    <if test="userName !=null ">and user_name= #{userName}</if>
                    <if test="createTime !=null ">and create_time= #{createTime}</if>
                    <if test="vid !=null ">and vid= #{vid}</if>
                    <if test="updateTime !=null ">and update_time= #{updateTime}</if>
                    <if test="price !=null ">and price= #{price}</if>
                    <if test="buyTime !=null ">and buy_time= #{buyTime}</if>
                    <if test="status !=null ">and status= #{status}</if>
                    <if test="title !=null ">and title= #{title}</if>
        </where>
    </select>

    <select id="selectPageUserBuyVip"  resultType="com.xinshijie.gallery.vo.UserBuyVipVo">
        <include refid="selectUserBuyVip"/>
        <where>
                    <if test="dto.id !=null ">and id= #{dto.id}</if>
                    <if test="dto.userId !=null ">and user_id= #{dto.userId}</if>
                    <if test="dto.userName !=null ">and user_name= #{dto.userName}</if>
                    <if test="dto.createTime !=null ">and create_time= #{dto.createTime}</if>
                    <if test="dto.vid !=null ">and vid= #{dto.vid}</if>
                    <if test="dto.updateTime !=null ">and update_time= #{dto.updateTime}</if>
                    <if test="dto.price !=null ">and price= #{dto.price}</if>
                    <if test="dto.buyTime !=null ">and buy_time= #{dto.buyTime}</if>
                    <if test="dto.status !=null ">and status= #{dto.status}</if>
                    <if test="dto.title !=null ">and title= #{dto.title}</if>
        </where>
    </select>

    <select id="getPageUserBuyVip"  resultType="com.xinshijie.gallery.vo.UserBuyVipVo">
        <include refid="selectUserBuyVip"/> ${ew.customSqlSegment}
    </select>

    <insert id="add"  >
        insert into user_buy_vip (
                id,
                user_id,
                user_name,
                create_time,
                vid,
                update_time,
                price,
                buy_time,
                status,
                title
          )
        values
            (
                    #{ id },
                    #{ userId },
                    #{ userName },
                    #{ createTime },
                    #{ vid },
                    #{ updateTime },
                    #{ price },
                    #{ buyTime },
                    #{ status },
                    #{ title }
       )
    </insert>

    <update id="edit"  >
        update  user_buy_vip
        <trim prefix="SET" suffixOverrides=",">
                    <if test="id !=null ">  id= #{id},</if>
                    <if test="userId !=null ">  user_id= #{userId},</if>
                    <if test="userName !=null ">  user_name= #{userName},</if>
                    <if test="createTime !=null ">  create_time= #{createTime},</if>
                    <if test="vid !=null ">  vid= #{vid},</if>
                    <if test="updateTime !=null ">  update_time= #{updateTime},</if>
                    <if test="price !=null ">  price= #{price},</if>
                    <if test="buyTime !=null ">  buy_time= #{buyTime},</if>
                    <if test="status !=null ">  status= #{status},</if>
                    <if test="title !=null ">  title= #{title},</if>
        </trim>
        where   id=#{id}
    </update>

    <delete id="delById"  >
        delete FROM  user_buy_vip where  id = #{id}
    </delete>

    <select id="getInfo"  resultType="com.xinshijie.gallery.vo.UserBuyVipVo">
        <include refid="selectUserBuyVip"/> where  id = #{id}
    </select>

</mapper>
