<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinshijie.gallery.mapper.AlbumCollectionMapper">

    <sql id="selectAlbumCollection">
        select id,
               user_id,
               user_name,
               create_time,
               title,
               aid
        from user_collection
    </sql>

    <select id="selectListAlbumCollection" parameterType="com.xinshijie.gallery.dto.AlbumCollectionDto"
            resultType="com.xinshijie.gallery.vo.AlbumCollectionVo">
        <include refid="selectAlbumCollection"/>
        <where>
            <if test="id !=null ">and id= #{id}</if>
            <if test="userId !=null ">and user_id= #{userId}</if>
            <if test="userName !=null ">and user_name= #{userName}</if>
            <if test="createTime !=null ">and create_time= #{createTime}</if>
            <if test="title !=null ">and title= #{title}</if>
            <if test="aid !=null ">and aid= #{aid}</if>
        </where>
    </select>

    <select id="selectPageAlbumCollection" resultType="com.xinshijie.gallery.vo.AlbumCollectionVo">
        <include refid="selectAlbumCollection"/>
        <where>
            <if test="dto.id !=null ">and id= #{dto.id}</if>
            <if test="dto.userId !=null ">and user_id= #{dto.userId}</if>
            <if test="dto.userName !=null ">and user_name= #{dto.userName}</if>
            <if test="dto.createTime !=null ">and create_time= #{dto.createTime}</if>
            <if test="dto.title !=null ">and title= #{dto.title}</if>
            <if test="dto.aid !=null ">and aid= #{dto.aid}</if>
        </where>
    </select>

    <select id="getPageAlbumCollection" resultType="com.xinshijie.gallery.vo.AlbumCollectionVo">
        <include refid="selectAlbumCollection"/>
        ${ew.customSqlSegment}
    </select>

    <insert id="add">
        insert into user_collection (id,
                                      user_id,
                                      user_name,
                                      create_time,
                                      title,
                                      aid)
        values (#{ id },
                #{ userId },
                #{ userName },
                #{ createTime },
                #{ title },
                #{ aid })
    </insert>

    <update id="edit">
        update user_collection
        <trim prefix="SET" suffixOverrides=",">
            <if test="id !=null ">id= #{id},</if>
            <if test="userId !=null ">user_id= #{userId},</if>
            <if test="userName !=null ">user_name= #{userName},</if>
            <if test="createTime !=null ">create_time= #{createTime},</if>
            <if test="title !=null ">title= #{title},</if>
            <if test="aid !=null ">aid= #{aid},</if>
        </trim>
        where id=#{id}
    </update>

    <delete id="delById">
        delete
        FROM user_collection
        where id = #{id}
    </delete>

    <select id="getInfo" resultType="com.xinshijie.gallery.vo.AlbumCollectionVo">
        <include refid="selectAlbumCollection"/>
        where id = #{id}
    </select>

</mapper>
