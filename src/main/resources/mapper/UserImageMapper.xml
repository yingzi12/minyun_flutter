<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinshijie.gallery.mapper.UserImageMapper">

    <sql id="selectUserImage">
        select
                  id,
                url,
                is_free,
                create_time,
                aid
        from user_image
    </sql>

    <select id="selectListUserImage" parameterType="com.xinshijie.gallery.dto.UserImageDto" resultType="com.xinshijie.gallery.vo.UserImageVo">
        <include refid="selectUserImage"/>
        <where>
                    <if test="id !=null ">and id= #{id}</if>
                    <if test="url !=null ">and url= #{url}</if>
                    <if test="isFree !=null ">and is_free= #{isFree}</if>
                    <if test="createTime !=null ">and create_time= #{createTime}</if>
            <if test="userId !=null ">and userId= #{userId}</if>
            <if test="aid !=null ">and aid= #{aid}</if>
        </where>
    </select>

    <select id="selectPageUserImage"  resultType="com.xinshijie.gallery.vo.UserImageVo">
        <include refid="selectUserImage"/>
        <where>
                    <if test="dto.id !=null ">and id= #{dto.id}</if>
                    <if test="dto.url !=null ">and url= #{dto.url}</if>
                    <if test="dto.isFree !=null ">and is_free= #{isFree}</if>
                    <if test="dto.createTime !=null ">and create_time= #{dto.createTime}</if>
            <if test="dto.userId !=null ">and userId= #{dto.userId}</if>
            <if test="dto.aid !=null ">and aid= #{dto.aid}</if>
        </where>
    </select>

    <select id="getPageUserImage"  resultType="com.xinshijie.gallery.vo.UserImageVo">
        <include refid="selectUserImage"/> ${ew.customSqlSegment}
    </select>


    <delete id="delById"  >
        delete FROM  user_image where  id = #{id}
    </delete>

    <select id="getInfo"  resultType="com.xinshijie.gallery.vo.UserImageVo">
        <include refid="selectUserImage"/> where  id = #{id}
    </select>

</mapper>
