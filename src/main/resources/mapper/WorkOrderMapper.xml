<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinshijie.gallery.mapper.WorkOrderMapper">

    <sql id="selectWorkOrder">
        select
                  id,
                title,
                explanation,
                imgUrls,
                status,
                update_time,
                create_time,
                user_id,
                user_name,
                reply
        from work_order
    </sql>

    <select id="selectListWorkOrder" parameterType="com.xinshijie.gallery.dto.WorkOrderDto" resultType="com.xinshijie.gallery.vo.WorkOrderVo">
        <include refid="selectWorkOrder"/>
        <where>
                    <if test="id !=null ">and id= #{id}</if>
                    <if test="title !=null ">and title= #{title}</if>
                    <if test="explanation !=null ">and explanation= #{explanation}</if>
                    <if test="imgUrls !=null ">and imgUrls= #{imgUrls}</if>
                    <if test="status !=null ">and status= #{status}</if>
                    <if test="updateTime !=null ">and update_time= #{updateTime}</if>
                    <if test="createTime !=null ">and create_time= #{createTime}</if>
                    <if test="userId !=null ">and user_id= #{userId}</if>
                    <if test="userName !=null ">and user_name= #{userName}</if>
                    <if test="reply !=null ">and reply= #{reply}</if>
        </where>
    </select>

    <select id="selectPageWorkOrder"  resultType="com.xinshijie.gallery.vo.WorkOrderVo">
        <include refid="selectWorkOrder"/>
        <where>
                    <if test="dto.id !=null ">and id= #{dto.id}</if>
                    <if test="dto.title !=null ">and title= #{dto.title}</if>
                    <if test="dto.explanation !=null ">and explanation= #{dto.explanation}</if>
                    <if test="dto.imgUrls !=null ">and imgUrls= #{dto.imgUrls}</if>
                    <if test="dto.status !=null ">and status= #{dto.status}</if>
                    <if test="dto.updateTime !=null ">and update_time= #{dto.updateTime}</if>
                    <if test="dto.createTime !=null ">and create_time= #{dto.createTime}</if>
                    <if test="dto.userId !=null ">and user_id= #{dto.userId}</if>
                    <if test="dto.userName !=null ">and user_name= #{dto.userName}</if>
                    <if test="dto.reply !=null ">and reply= #{dto.reply}</if>
        </where>
        order by create_time desc
    </select>

    <select id="getPageWorkOrder"  resultType="com.xinshijie.gallery.vo.WorkOrderVo">
        <include refid="selectWorkOrder"/> ${ew.customSqlSegment}
    </select>

    <insert id="add"  >
        insert into work_order (
                id,
                title,
                explanation,
                imgUrls,
                status,
                update_time,
                create_time,
                user_id,
                user_name,
                reply
          )
        values
            (
                    #{ id },
                    #{ title },
                    #{ explanation },
                    #{ imgUrls },
                    #{ status },
                    #{ updateTime },
                    #{ createTime },
                    #{ userId },
                    #{ userName },
                    #{ reply }
       )
    </insert>

    <update id="edit"  >
        update  work_order
        <trim prefix="SET" suffixOverrides=",">
                    <if test="id !=null ">  id= #{id},</if>
                    <if test="title !=null ">  title= #{title},</if>
                    <if test="explanation !=null ">  explanation= #{explanation},</if>
                    <if test="imgUrls !=null ">  imgUrls= #{imgUrls},</if>
                    <if test="status !=null ">  status= #{status},</if>
                    <if test="updateTime !=null ">  update_time= #{updateTime},</if>
                    <if test="createTime !=null ">  create_time= #{createTime},</if>
                    <if test="userId !=null ">  user_id= #{userId},</if>
                    <if test="userName !=null ">  user_name= #{userName},</if>
                    <if test="reply !=null ">  reply= #{reply},</if>
        </trim>
        where   id=#{id}
    </update>

    <delete id="delById"  >
        delete FROM  work_order where  id = #{id}
    </delete>

    <select id="getInfo"  resultType="com.xinshijie.gallery.vo.WorkOrderVo">
        <include refid="selectWorkOrder"/> where  id = #{id}
    </select>

</mapper>
