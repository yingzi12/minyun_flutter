<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.xinshijie.gallery.mapper.AlbumMapper">

    <resultMap id="BaseResultMap" type="org.xinshijie.gallery.dao.Album">
            <id property="id" column="id" jdbcType="OTHER"/>
            <result property="page" column="page" jdbcType="VARCHAR"/>
            <result property="xh" column="xh" jdbcType="VARCHAR"/>
            <result property="url" column="url" jdbcType="VARCHAR"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="sourceWeb" column="source_web" jdbcType="VARCHAR"/>
            <result property="hash" column="hash" jdbcType="OTHER"/>
            <result property="countSee" column="count_see" jdbcType="OTHER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,`page`,xh,
        url,title,source_web,
        `hash`,count_see
    </sql>
    <select id="list"  resultType="org.xinshijie.gallery.dao.Album">
        select * from album
        <where>
            <if test="id != null "> and id = #{id}</if>
            <if test="title != null "> and title like  '%' || #{title} || '%'</if>
        </where>
        <if test="order == null "> order by  update_time,count_see  desc </if>
        <if test="order != null "> order by  count_see  desc </if>
        LIMIT #{pageSize}
        OFFSET (#{pageNum} - 1) * #{pageSize};
    </select>
    <select id="count"  resultType="Integer">
        select count(1) from album
        <where>
            <if test="id != null "> and id = #{id}</if>
            <if test="title != null "> and title like  '%' || #{title} || '%'</if>
        </where>
    </select>

    <select id="getInfo"  resultType="org.xinshijie.gallery.dao.Album">
        select * from album where id= #{id}

    </select>
    <insert id="add"  parameterType="org.xinshijie.gallery.dao.Album">
        INSERT INTO album (source_web, `hash`, count_see, gril, create_time, img_url, count_error )
        VALUES
        ( #{dto.sourceWeb},#{dto.hash}, #{dto.countSee}, #{dto.gril}, #{dto.createTime}, #{dto.imgUrl}, #{dto.countError} )
    </insert>
    <update id="updateError">
        update  album set count_error=count_error+1  where id= #{id}
    </update>
    <update id="updateCountSee">
        update  album set count_see=count_see+1,update_time= #{updateTime} where id= #{id}
    </update>
</mapper>
